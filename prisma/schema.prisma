generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  ownerName     String
  email         String   @unique
  password_hash String
  phone         String
  city          String
  created_at    DateTime @default(now())
  Pet           Pet[]

  @@map("organizations")
}

model Pet {
  id           String      @id @default(uuid())
  name         String
  about        String?
  species      Species
  age          Age
  size         Size
  energy_level EnergyLevel
  created_at   DateTime    @default(now())

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}

enum Species {
  dog
  cat
  bird
  rabbit
  fish
  rodent
}

enum Age {
  puppy
  adult
  senior
}

enum Size {
  small
  medium
  large
  giant
}

enum EnergyLevel {
  low
  medium
  high
}
